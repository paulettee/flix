


<h2>Movie Genre</h2>
<p>
  <%= link_to "Back to Genres", genres_path %>
</p>
<ul>
  <li>
   <%= @genre.name %>
  </li>
</ul>

<% if current_user_admin? %>
  <p>
  <%= link_to "Edit", edit_genre_path(@genre) %> &bull;
  <%= link_to "Delete", genre_path(@genre), data:
   { turbo_method: "delete", turbo_confirm: "Do you want to delete this genre?"} %>
  </p>
<% end %>

<% if @movie_with_genre.present? %>
  <h3>Movies</h3>
  <div class="genre-movies">
    <% @movie_with_genre.each do |movie| %>
        <%= link_to image_tag(movie.image_file_name), movie %>
    <% end %>
  </div>
<% end %>
